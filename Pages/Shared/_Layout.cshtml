@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _2._LostFoundProj</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_2._LostFoundProj.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
     <style>
     </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-action="Home">Lost <b>&</b> Found</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div style="text-align: center" class=" navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="display: flex;align-items:center">
                            <a class="text-black" asp-action="Search"><i class="material-icons navbar-item-icon">search</i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-action="Lost">Lost</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-action="Home">Found</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-action="Chat" asp-rou>Chat Box</a>
                        </li>
                        @if (Context.Session.GetString("admin") != null)
                        {
                        <li class="nav-item">
                        <a class="nav-link " asp-action="MemberList">View all account</a>
                         </li>
                         <li class="nav-item">
                        <a class="nav-link " asp-action="Duyet">Process Post</a>
                         </li>
                        }
                    </ul>
                </div>
                <div style="text-align:right" class="col-lg-3 navbar-user-profile dropdown nav-right">
                    <!-- Dropdown toggler -->
                    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="material-icons navbar-item-icon">account_circle</i>
                    </button>
                    <!-- Dropdown menu -->
                    @if (Context.Session.GetInt32("user") != null)
                    {
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" asp-action="ViewPost">View Your Post</a>
                            <a class="dropdown-item" asp-action="Profile" asp-route-id="@Context.Session.GetInt32("user")">Profile</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-action="LogOut">Log out</a>
                        </div>
                    }else{
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" asp-action="SignUp">Sign Up</a>
                            <a class="dropdown-item" asp-action="LogIn">Log In</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
        integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS"
        crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>