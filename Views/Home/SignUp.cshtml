@model _2._LostFoundProj.Models.Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>SignUp</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SignUp" method="post" onsubmit="CheckInput()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" placeholder="enter your username" class="form-control" required/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pass" class="control-label"></label>
                <input asp-for="Pass" type="password" placeholder="Enter password" class="form-control" id="pass1" required/>
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >Re-enter password</label>
                <input type="password" placeholder="Re enter password" class="form-control" id="pass2" required/>
                <span asp-validation-for="Pass" class="text-danger"></span>
                <p id="canhbao" style="color: red; font-weight:bold"></p>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input type="number" asp-for="Phone" placeholder="So that other can contact you" class="form-control" id="phone"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dob" class="control-label"></label>
                <input type="date" asp-for="Dob" class="form-control" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Home">Back to Home</a>
</div>
